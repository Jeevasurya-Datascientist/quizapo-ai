rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // --- HELPER FUNCTIONS ---
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    // --- 1. USERS COLLECTION ---
    match /users/{userId} {
      // 1. READ: Public
      allow read: if true;
      
      // 2. CREATE: Owner only
      allow create: if isOwner(userId);
      
      // 3. UPDATE: 
      // STRICT: Counts can only be updated if they are being incremented/decremented correctly in a transaction?
      // For client-side app simplicity, we allow auth users to update specific fields, but ideally this should be stricter.
      allow update: if isOwner(userId) || (
        isAuthenticated() && 
        request.resource.data.diff(resource.data).affectedKeys()
          .hasOnly(['followersCount', 'followingCount', 'followers', 'following'])
      );
    }

    // --- 2. SOCIAL NETWORK 2.0 COLLECTIONS ---

    // NEW: Follow Requests (Strict Mutual Consent Flow)
    // NEW: Follow Requests (Strict Mutual Consent Flow)
    match /follow_requests/{requestId} {
      // Rule 1: ID must be deterministic: fromUserId_toUserId
      function isValidRequestId() {
        return requestId == request.resource.data.fromUserId + "_" + request.resource.data.toUserId;
      }

      // Split read into get (single doc) and list (queries)
      // GET: Allow if doc missing (transaction check) OR if I'm involved
      allow get: if isAuthenticated() && (
        resource == null ||
        resource.data.fromUserId == request.auth.uid || 
        resource.data.toUserId == request.auth.uid
      );
      
      // LIST: Query constraints must match these fields
      allow list: if isAuthenticated() && (
        resource.data.fromUserId == request.auth.uid || 
        resource.data.toUserId == request.auth.uid
      );
      
      // Create: I must be the sender AND ID must be correct
      allow create: if isAuthenticated() 
        && request.resource.data.fromUserId == request.auth.uid
        && isValidRequestId();

      // Update: I must be sender or receiver
      allow update: if isAuthenticated() && (
        resource.data.fromUserId == request.auth.uid || 
        resource.data.toUserId == request.auth.uid
      );
    }

    // NEW: Mutual Connections (Private Followers)
    match /followers/{connectionId} {
      allow get: if isAuthenticated() && (
        resource == null ||
        resource.data.userA == request.auth.uid || 
        resource.data.userB == request.auth.uid
      );
      
      allow list: if isAuthenticated() && (
        resource.data.userA == request.auth.uid || 
        resource.data.userB == request.auth.uid
      );
      
      // Create: System/Transaction creates this. 
      // We check that the ID contains both UIDs to prevent spam.
      allow create: if isAuthenticated() && (
        request.resource.data.userA == request.auth.uid || 
        request.resource.data.userB == request.auth.uid
      ) && (
        connectionId == request.resource.data.userA + "_" + request.resource.data.userB ||
        connectionId == request.resource.data.userB + "_" + request.resource.data.userA
      );
      
      allow delete: if isAuthenticated() && (
        resource.data.userA == request.auth.uid || 
        resource.data.userB == request.auth.uid
      );
    }

    // --- 3. STANDARD COLLECTIONS ---
    
    // [NEW] Question Bank Permissions
    match /questionBanks/{bankId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated() && request.resource.data.facultyId == request.auth.uid;
      allow update, delete: if isAuthenticated() && resource.data.facultyId == request.auth.uid;
    }

    match /tests/{testId} {
      allow read: if isAuthenticated();
      allow create, update: if isAuthenticated() && request.resource.data.facultyId == request.auth.uid;
      // Allow updates to disqualifiedStudents by system (or rather, the faculty owner/logic)
      allow delete: if isAuthenticated() && resource.data.facultyId == request.auth.uid;
    }

    match /testAttempts/{attemptId} {
      allow read: if isAuthenticated() && (
        resource.data.studentId == request.auth.uid || 
        get(/databases/$(database)/documents/tests/$(resource.data.testId)).data.facultyId == request.auth.uid
      );
      allow create: if isAuthenticated() && request.resource.data.studentId == request.auth.uid;
      allow update: if false; 
    }

    match /notifications/{notificationId} {
      // Allow creating notifications for others (needed for "Notify Followers")
      allow create: if isAuthenticated();
      
      // Read/Update/Delete own notifications
      allow read, update, delete: if isAuthenticated() && (
        resource.data.toUserId == request.auth.uid || 
        resource.data.studentId == request.auth.uid // Legacy field support
      );
    }

    match /violationAlerts/{alertId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated();
      allow update: if isAuthenticated();
    }
    
    match /chats/{chatId}/messages/{messageId} {
      allow read, create: if isAuthenticated();
    }
  }
}
